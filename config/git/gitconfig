[core]
    editor = vim
    autocrlf = input
    pager = less -F -X

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = current

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[color]
    ui = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

[credential]
    helper = cache --timeout=3600
